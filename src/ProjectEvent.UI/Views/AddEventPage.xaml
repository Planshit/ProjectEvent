<Page xmlns:InputGroup="clr-namespace:ProjectEvent.UI.Controls.InputGroup"  xmlns:ItemSelect="clr-namespace:ProjectEvent.UI.Controls.ItemSelect"  xmlns:Action="clr-namespace:ProjectEvent.UI.Controls.Action"  x:Class="ProjectEvent.UI.Views.AddEventPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectEvent.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEventPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>

        </Grid.RowDefinitions>
        <TabControl SelectedIndex="{Binding StepIndex,Mode=TwoWay}">
            <TabItem Header="事件">
                <ItemSelect:ItemSelect Items="{Binding Events,Mode=TwoWay}" SelectID="{Binding SelectedEventID,Mode=TwoWay}"/>
            </TabItem>
            <TabItem Header="条件">
                <InputGroup:InputGroup Groups="{Binding Conditions}" DataSource="{Binding ConditionData}"/>
            </TabItem>
            <TabItem Header="操作">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button Command="{Binding AddActionCommand}" Content="Add action"/>
                    </StackPanel>
                    <Action:ActionContainer Grid.Row="1" Items="{Binding Actions,Mode=TwoWay}"/>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Button Content="Add" Width="120" Height="30" Command="{Binding AddCommand}"/>
        </StackPanel>
    </Grid>
</Page>
