<Page x:Class="ProjectEvent.UI.Views.IndexPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectEvent.UI.Views"
      xmlns:ItemSelect="clr-namespace:ProjectEvent.UI.Controls.ItemSelect"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="IndexPage">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" >
            <TextBlock Text="Project Event" FontSize="20" VerticalAlignment="Center"/>

            <Button Margin="20,0,0,0" Content="创建Project" Command="{Binding RedirectCommand}" CommandParameter="AddEventPage" Width="120" Height="30" VerticalAlignment="Center"/>
        </StackPanel>
        <ItemSelect:ItemSelect Grid.Row="1" Items="{Binding Projects,Mode=TwoWay}" SelectID="{Binding SelectedProjectID,Mode=TwoWay}"/>

    </Grid>
</Page>
