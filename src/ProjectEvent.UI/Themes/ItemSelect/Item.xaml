<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ProjectEvent.UI.Controls.ItemSelect"
                    xmlns:base="clr-namespace:ProjectEvent.UI.Controls.Base">
    <Style TargetType="{x:Type local:Item}">
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="{DynamicResource StandardColorBrush}"/>
        <Setter Property="Width" Value="160"/>
        <Setter Property="Height" Value="200"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="SnapsToDevicePixels"
          Value="true" />
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="#ccc"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:Item}">
                    <ControlTemplate.Resources>
                        <DropShadowEffect x:Key="BorderShadow" BlurRadius="10" Opacity="0.2"  ShadowDepth="0"/>
                    </ControlTemplate.Resources>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Margin="10"
                            CornerRadius="4"
                            x:Name="Border">
                        <Border.RenderTransform>
                            <TranslateTransform Y="0"/>
                        </Border.RenderTransform>
                        <!--<Border.Effect>
                            
                        </Border.Effect>-->
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="MouseStates">
                                <VisualState Name="MouseLeave" />
                                <VisualState Name="MouseEnter">
                                    <Storyboard>

                                        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.RenderTransform).
               (TranslateTransform.Y)"
                                          Storyboard.TargetName="Border">
                                            <EasingDoubleKeyFrame KeyTime="00:00:0.1"
                                   Value="-5"/>
                                        </DoubleAnimationUsingKeyFrames>
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                        <Border x:Name="ContentBorder" Padding="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>
                                <!--<base:Icon x:Name="Checked" IconType="Accept" FontWeight="Bold" FontSize="24" Foreground="{DynamicResource PrimaryColorBrush}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Visibility="Hidden" />-->

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition x:Name="IconRow" Height="*"/>
                                        <RowDefinition x:Name="DescriptionRow" Height="*"/>
                                    </Grid.RowDefinitions>
                                    <base:Icon Foreground="{TemplateBinding IconColor}" IconType="{TemplateBinding Icon}" FontSize="40" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                    <TextBlock Text="{TemplateBinding Description}" Grid.Row="1" TextWrapping="Wrap" Margin="10,0" Foreground="{DynamicResource PlaceholderBrush}"/>
                                </Grid>
                                <Border Grid.Row="1" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="0,1,0,0"  Padding="0,10,0,0">
                                    <TextBlock HorizontalAlignment="Center" TextWrapping="WrapWithOverflow" Text="{TemplateBinding Title}" FontSize="14" FontWeight="Bold"/>
                                </Border>
                            </Grid>
                        </Border>
                    </Border>

                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="Description" Value=""/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="DescriptionRow" Property="Height" Value="0"/>
                        </MultiTrigger>
                        <Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="Border" Property="Effect" Value="{StaticResource BorderShadow}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="true">
                            <Setter TargetName="Border" Property="BorderThickness" Value="2"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryColorBrush}"/>
                            <Setter TargetName="Border" Property="Effect" Value="{StaticResource BorderShadow}"/>

                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>